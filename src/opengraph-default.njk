---
seed: 1342793
width: 1200
height: 628
background: '#222'
color: '#fee'
waveSteps: 10
amplitude: 35
waveHeight: 0.33
colors: ['#000000', '#A3A3A3', '#FFFFFF', '#800080']
eleventyExcludeFromCollections: true
permalink: '/assets/images/social-preview/default.svg'
---
<svg width="1200" height="628" viewBox="0 0 1200 628" xmlns="http://www.w3.org/2000/svg">
  {{ prng.init(seed) }}

  {%- for i in range(0, colors.length) -%}
    {%- set y0 = i * (height * waveHeight) / colors.length + (1 - waveHeight) * height -%}
    {%- set step = width/waveSteps%}
    <path d="{{prng.curve(waveSteps + 1, step, y0, amplitude)}}V{{height}}H0Z" fill="{{ colors[i] }}" stroke="{{ background }}"/>
  {%- endfor -%}
  <text
    id="text"
    font-family="'Iowan Old Style', 'Palatino Linotype', 'URW Palladio L', P052, serif"
    font-size="80"
    font-weight="900"
    fill="{{ color }}"
    style="filter: drop-shadow(3px 3px 0px {{ background }})"
    letter-spacing="-3"
    text-anchor="middle"
    x="600"
    y="200"
  >
      Lea's Blog
  </text>
</svg>
